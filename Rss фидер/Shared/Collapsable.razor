<div class="collapsable item">
    <div class="title" @onclick="@Toggle">
        <div>
            @if (Collapsed)
            {
                <span class="oi oi-chevron-right oiHover oiChevron"></span>
            }
            else
            {
                <span class="oi oi-chevron-bottom oiHover oiChevron"></span>
            }
            @((MarkupString)Title)
        </div>
        <div class="pubDate">
            @((MarkupString)PubDate)
        </div>
    </div>

    @if (!Collapsed)
    {
        <div class="collapsable-panel">
            @if (FormattingHtml)
                {
                    @((MarkupString)Description)
                }
                else
                {
                    @(Description)
                }
            
        </div>
    }
</div>
 

 
@code {
    [Parameter] public string Description { get; set; }
    [Parameter] public bool Collapsed { get; set; }
    [Parameter] public bool FormattingHtml { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public string PubDate { get; set; }
 
    void Toggle()
    {
        Collapsed = !Collapsed;
    }
}